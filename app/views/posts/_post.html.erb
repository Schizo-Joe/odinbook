<div class="card my-2" id="post-<%= post.id %>">
  <div class="card-body">
    <p class="card-text">
      <%= post.content %>
    </p>
    <div class="d-flex justify-content-between">
      <div>
        <% if post.user == current_user %>
          <%= link_to 'Edit', edit_post_path(post), class: 'card-link' %>
          <%= link_to 'Delete', post_path(post), method: :delete, class: 'card-link text-danger', data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
      <h6 class="card-subtitle text-muted d-inline">
        <%= time_ago_in_words(post.created_at) %> ago by
        <%= link_to post.user, class: 'text-decoration-none text-reset' do %>
          <%= post.user.name %>
          <%= avatar_tag post.user, size: 30, class: 'round-avatar' %>
        <% end %>
      </h6>
    </div>
  </div>
</div>
