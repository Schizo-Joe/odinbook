<div class="card my-2 offset-1" id="comment-<%= comment.id %>">
  <div class="card-body d-flex justify-content-between align-items-center">
    <%= comment.content %>
    <h6 class="card-subtitle text-muted d-flex align-items-center">
      <span>
        <% if comment.user == current_user %>
          <%= link_to 'Edit', edit_post_comment_path(comment.post, comment), class: 'card-link' %>
          <%= link_to 'Delete', post_comment_path(comment.post, comment), method: :delete, class: 'card-link text-danger mr-3', data: { confirm: 'Are you sure?' } %>
        <% end %>
      </span>
      <span>
        <%= time_ago_in_words(comment.created_at) %> ago by
        <%= link_to comment.user, class: 'text-decoration-none text-reset' do %>
          <%= comment.user.name %>
          <%= avatar_tag comment.user, size: 30, class: 'round-avatar' %>
        <% end %>
      </span>
    </h6>
  </div>
</div>
