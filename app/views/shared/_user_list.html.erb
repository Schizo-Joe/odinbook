<% if @users.empty? %>
  <div class="text-center">
    <h1><%= yield(:page) %></h1>
    <p><%= yield(:empty_page_message) %></p>
  </div>
<% else %>
<div class="d-flex justify-content-center align-items-center justify-content-lg-between flex-wrap flex-lg-nowrap pb-2 pb-lg-0" >
  <h1 class="my-0 mx-2"><%= yield(:page) %></h1>
  <%= will_paginate @users %>
</div>
<div>
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="d-flex justify-content-between align-items-center list-group-item">
        <%= link_to user, class: "text-reset text-decoration-none", id: user.id do %>
          <%= round_avatar_tag user, size: 40, class: 'round-avatar mr-2' %>
          <%= user.name %>
        <% end %>
        <% if local_assigns.fetch :show_button, true %>
            <%= render yield(:button_partial_path), user: user %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
<% end %>
