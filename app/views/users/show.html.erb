<div class="profile jumbotron text-center">
  <%= round_avatar_tag @user, class: 'round-avatar mb-3' %>

  <h1 class="display-4">
    <%= @user.name %>
  </h1>
  <hr >
    <p>
      <% if @user.summary.present? %>
        <%= @user.summary %>
      <% else %>
        An Odinbook member.
      <% end %>
    </p>
  <% if @user == current_user %>
    <%= link_to edit_user_path(@user), class: "text-reset" do %>
      <%= fa_icon "edit" %>
    <% end %>
  <% end %>
</div>
