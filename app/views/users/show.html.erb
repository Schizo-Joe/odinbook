<div class="profile jumbotron text-center">
  <h1 class="display-4">
    <%= @user.name %>
  </h1>
  <% if @user.summary %>
    <hr >
    <p>
      <%= @user.summary %>
    </p>
  <% end %>
  <% if @user == current_user %>
    <%= link_to edit_user_path(@user), class: "text-reset" do %>
      <%= fa_icon "edit" %>
    <% end %>
  <% end %>
</div>
