<div class="d-flex align-items-center justify-content-between" >
  <h1>Find Friends</h1>
  <%= will_paginate @users %>
</div>
<div>
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="d-flex justify-content-between align-items-center list-group-item">
        <%= user.name %>
        <button class="btn btn-sm btn-outline-primary">
          Add friend
        </button>
      </li>
    <% end %>
  </ul>
</div>
