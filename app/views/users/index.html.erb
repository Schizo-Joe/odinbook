<% provide :page, 'Find Friends' %>

<div class="d-flex justify-content-center align-items-lg-center justify-content-lg-between flex-wrap flex-lg-nowrap pb-2 pb-lg-0" >
  <h1>Find Friends</h1>
  <%= will_paginate @users %>
</div>
<div>
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="d-flex justify-content-between align-items-center list-group-item">
        <%= link_to user, class: "text-reset text-decoration-none", id: user.id do %>
          <%= round_avatar_tag user, size: 40, class: 'round-avatar mr-2' %>
          <%= user.name %>
        <% end %>
        <%= button_to 'Add friend', add_friend_path, params: { requestee_id: user.id }, class: 'btn btn-sm btn-outline-primary', id: user.id %>
      </li>
    <% end %>
  </ul>
</div>
