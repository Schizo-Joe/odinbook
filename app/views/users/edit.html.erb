<%= form_with model: @user, local: true do |f| %>
  <%= rounded_avatar @user %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.label :name, 'Display name' %>
  <%= f.text_field :name %>

  <%= f.label :summary %>
  <%= f.text_area :summary %>

  <%= f.submit 'Update profile' %>
<% end %>
